{% for message in session('flash_notification', collect()).toArray() %}
    {% if message.overlay %}
        {% include 'vendor/flash/modal' with {'modalClass': 'flash-modal', 'title': message.title, 'body': message.message} %}
    {% else %}
        <div class="alert alert-{{ message.level|default('info') }} {{ message.important ? 'alert-important' : '' }}"
             role="alert">
            {{ message.message }}
        </div>
    {% endif %}
{% endfor %}

{% do session_forget('flash_notification') %}
