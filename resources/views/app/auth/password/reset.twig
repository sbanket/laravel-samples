{% extends 'layouts/guest' %}

{% import 'macros/messages' as messages %}
{% import 'macros/forms' as forms %}

{% block content %}
    <div class="row fill-90-vertical-viewport align-items-center justify-content-center">
        <div class="col-12 col-md-6">
            <div class="signin-form-container">
                {{ messages.alerts(errors) }}
                <form method="post" action="{{ route('password.reset.submit', {'token': token}) }}" name="reset-form">
                    {{ csrf_field() }}
                    {{ forms.input('token', old('token', token), 'hidden') }}

                    <div class="form-group">
                        {{ forms.label('email', 'Email') }}
                        {{ forms.input('email', old('email', email), 'email') }}
                    </div>

                    <div class="form-group">
                        {{ forms.label('password', 'Пароль') }}
                        {{ forms.input('password', null, 'password') }}
                    </div>

                    <div class="form-group">
                        {{ forms.label('password_confirmation', 'Повторить пароль') }}
                        {{ forms.input('password_confirmation', null, 'password') }}
                    </div>

                    <button class="btn btn-lg btn-info btn-block">
                        Сохранить пароль
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
